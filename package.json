{
  "name": "timer-adapter",
  "display_name": "Timer",
  "version": "1.4.0",
  "description": "Runs for the specified number of seconds",
  "main": "lib/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc -p ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tim-hellhake/timer-adapter.git"
  },
  "author": "Tim Hellhake",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/tim-hellhake/timer-adapter/issues"
  },
  "homepage": "https://github.com/tim-hellhake/timer-adapter#readme",
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "lib/index.js",
    "lib/timer-adapter.js",
    "manifest.json"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "schema": {
      "type": "object",
      "required": [
        "timers"
      ],
      "properties": {
        "timers": {
          "type": "array",
          "title": "List of timers",
          "items": {
            "type": "object",
            "title": "A Timer",
            "required": [
              "name",
              "seconds"
            ],
            "properties": {
              "name": {
                "type": "string",
                "title": "The name of the timer"
              },
              "id": {
                "type": "string",
                "title": "The ID of the timer (will be generated for you)",
                "readOnly": true
              },
              "seconds": {
                "type": "string",
                "title": "The number of seconds after which the timer should elapse"
              }
            }
          }
        },
        "precisionTimers": {
          "items": {
            "properties": {
              "name": {
                "title": "The name of the timer",
                "type": "string"
              },
              "id": {
                "type": "string",
                "title": "The ID of the timer (will be generated for you)",
                "readOnly": true
              },
              "seconds": {
                "title": "The number of seconds after which the timer should elapse",
                "type": "number"
              }
            },
            "required": [
              "name",
              "seconds"
            ],
            "title": "A Timer",
            "type": "object"
          },
          "title": "List of precision timers (no ui updates but sub-second intervals)",
          "type": "array"
        },
        "intervals": {
          "type": "array",
          "title": "List of intervals",
          "items": {
            "type": "object",
            "title": "An interval",
            "required": [
              "name",
              "seconds"
            ],
            "properties": {
              "name": {
                "type": "string",
                "title": "The name of the interval"
              },
              "id": {
                "type": "string",
                "title": "The ID of the interval (will be generated for you)",
                "readOnly": true
              },
              "seconds": {
                "type": "string",
                "title": "The number of seconds after which the interval should elapse"
              }
            }
          }
        },
        "logging": {
          "type": "object",
          "title": "Log settings",
          "properties": {
            "debug": {
              "title": "Enable debug logs",
              "type": "boolean"
            }
          }
        },
        "deactivateProgressBar": {
          "type": "boolean",
          "title": "Hide the seconds property and the progress bar of the interval devices"
        }
      }
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^14.0.6",
    "typescript": "^3.9.3"
  }
}
